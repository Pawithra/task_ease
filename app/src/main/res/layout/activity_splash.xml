<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3A8B2">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp"
        android:background="@drawable/pp">

        <ImageView
            android:layout_width="120.34dp"
            android:layout_height="106.94dp"
            android:layout_centerInParent="true"
            android:src="@drawable/check_mark" />

        <TextView
            android:id="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="98dp"
            android:rotation="-50"
            android:text="Task Ease"
            android:textColor="#D9D9D9"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="392dp"
        android:text="TaskEase Effortless Task Mastery"
        android:textColor="#101B4B"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="584dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress_bar_states" />

</RelativeLayout>


