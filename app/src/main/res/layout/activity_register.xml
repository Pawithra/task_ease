<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    android:textAlignment="center"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:text="Confirm password"
        android:textColor="#101B4B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegRePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="21dp"
        android:text="Password"
        android:textColor="#101B4B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegEmail" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="3dp"
        android:text="Email address"
        android:textColor="#101B4B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegUsername"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextRegPassword"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ashrectangle"
        android:backgroundTint="#519A8E8E"
        android:drawableEnd="@drawable/pwd"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:password="true"
        android:textAlignment="viewStart"
        android:textColor="#96000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686"
        app:passwordToggleEnabled="true"
        tools:ignore="Deprecated,DuplicateIds,HardcodedText,NotSibling,TextFields,VisualLintOverlap" />

    <EditText
        android:id="@+id/editTextRegEmail"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginBottom="376dp"
        android:autofillHints=""
        android:background="@drawable/ashrectangle"
        android:backgroundTint="#519A8E8E"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter E-mail address"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        android:textColor="#96000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateIds,HardcodedText,RtlSymmetry,TextFields" />

    <EditText
        android:id="@+id/editTextRegRePassword"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/ashrectangle"
        android:backgroundTint="#519A8E8E"
        android:drawableEnd="@drawable/pwd"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Re-enterPassword"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:password="true"
        android:textAlignment="viewStart"
        android:textColor="#96000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783"
        tools:ignore="Deprecated,DuplicateIds,HardcodedText,NotSibling,TextFields,VisualLintOverlap" />

    <EditText
        android:id="@+id/editTextRegUsername"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:background="@drawable/ashrectangle"
        android:backgroundTint="#519A8E8E"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter name"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        android:textColor="#96000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="DuplicateIds,HardcodedText,RtlSymmetry" />

    <TextView
        android:id="@+id/textViewRegAlready"
        android:layout_width="290dp"
        android:layout_height="27dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="  Already have an account ?"
        android:textAlignment="center"
        android:textColor="#101B4B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="HardcodedText,MissingConstraints,NotSibling,TextSizeCheck" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="184dp"
        android:layout_height="39dp"
        android:backgroundTint="#101B4B"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegPassword"
        app:layout_constraintVertical_bias="0.567"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/textViewRegLogin"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/alike"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#101B4B"
        android:textColorHighlight="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,NotSibling,TextSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="85dp"
        android:text="SIGN UP"
        android:textColor="#101B4B"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="266dp"
        android:text="User name"
        android:textColor="#101B4B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>